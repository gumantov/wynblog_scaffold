<p id="notice"><%= notice %></p>

<h1> <%= @post.title %> </h1>

<p>
  <strong>Author:</strong>
  <%= @post.user.username %>
  <img src="<%= @post.user.avatar %>" height ="90">
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<h2>
<h2> Comments: </h2>
<%= render @post.comments %>
</h2>

<h2>Add a Comment:</h2>
<%= render 'comments/form' %>

<p>
  <strong>Category:</strong>
  <%= @post.category.name %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
